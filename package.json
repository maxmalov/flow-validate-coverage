{
  "name": "flow-lint-coverage",
  "version": "0.3.0",
  "description": "Asserts the given file against the specified coverage threshold",
  "main": "main.js",
  "repository": "git@github.com:maxmalov/flow-lint-coverage.git",
  "author": "Max Malov <m.malov.v@gmail.com>",
  "license": "MIT",
  "bin": {
    "flow-lint-coverage": "./bin/cli.js"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "fmt": "prettier --write '**/*.js'",
    "precommit": "lint-staged",
    "prepush": "npm t"
  },
  "dependencies": {
    "execa": "2.0.1",
    "flow-annotation-check": "1.8.1-0",
    "yargs": "12.0.1"
  },
  "devDependencies": {
    "flow-bin": "0.78.0",
    "husky": "0.14.3",
    "jest": "22.4.2",
    "lint-staged": "7.2.2",
    "prettier": "1.14.2"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  }
}
